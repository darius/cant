;; How many regexes of each size?
;; (disabled)
(to (tabulate alphabet)
  (let g (re-generator<- alphabet))
  (for each! ((size (1 .thru 8)))
    (out .say "~w ~w ~w\n" alphabet.count size (take size g ~.count))))
'(do
  (tabulate "01")  out.newline
