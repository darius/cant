(import (use 'memoize) memoize)

;; Given `size`, return a list of Cant expressions, of that size,
;; which produce regexes. (You have to play the expression in a
;; setting that has imported a regex module.) The size is the count of
;; regex constructors used.
(to (re-generator<- alphabet)
  (to ((tag name) @arguments)
    `(,name ,@arguments))
  (let gen
    (memoize (on (size)
               (let res (flexarray<-))
               (when (= 1 size)
                 (res .extend! (link 'empty (each (tag 'lit-rune) alphabet.values))))
               (when (<= 2 size)
                 (res .extend! (each (tag 'star) (gen size.-))))
               (when (<= 3 size)
                 (for each! ((i (1 .till size.-)))
                   (for each! ((`(,re1 ,re2) (grid* (gen i) (gen (- size i 1)))))
                     (res .push! ((tag 'either) re1 re2))
                     (res .push! ((tag 'then) re1 re2)))))
               res.values))))

