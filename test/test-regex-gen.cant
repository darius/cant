(import (use 'regex-gen) regex-generate regex-parse)

(to (test regex n)
  (let r (regex-parse regex))
  (out .say "~d (~w)\n~d\n" regex n (text-by (:: "-") regex))
  (let Ns ((0 .thru n) .range))
  (for each! ((text (regex-generate r Ns)))
    (out .say "~w\n" text))
  out.newline)

(out .print (regex-parse "."))

(test "." 2)
(test "X" 2)
(test "XY" 3)
(test "X|Y" 2)
(test "X+" 3)
(test "a(b|c)*d" 4)
(test "a.*d" 5)
(test "a[bc]*d" 4)
(test "a[x]+z()*|c.hi" 5)

