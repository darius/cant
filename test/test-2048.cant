(import (use "../examples/games/2048") left down)

(to (exercise board)
  (show-move left board)
  (show-move down board))

(to (show-move dir board)
  (show board)
  (out .say " ------- ~w:\n" dir)
  (for each! ((moved (dir board)))
    (show moved)
    out.newline)
  out.newline)

(to (show rows)
  (for each! ((row rows))
    (for each! ((v row))
      (out .say " ~d" (if (= v 0) "." v)))
    out.newline))

(exercise '((2 4 2 2)
            (2 2 2 2)
            (0 2 0 2)
            (2 0 2 0)))

(exercise '((2 0 0 2)
            (0 0 0 2)
            (0 2 4 4)
            (0 2 2 4)))

(exercise '((2 2 2 4)
            (0 0 0 0)
            (2 2 4 4)
            (0 0 0 0)))
