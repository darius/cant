;; Complex numbers

(import (use 'complex) c+ c- c* c/ c-abs)

(let z {complex 0 0})
(let l {complex 1 0})
(let i {complex 0 1})

(let hypot (c+ (c- z (c- z (c+ l (c+ l l))))
               (c* i (c+ l (c+ l (c+ l l ))))))

(out .say "0+0 = ~w\n" (c+ z z))
(out .say "i*i = ~w\n" (c* i i))
(out .say "|3+4i| = ~w\n" (c-abs hypot))
(out .say "z/z = ~w\n" (c/ hypot hypot))
