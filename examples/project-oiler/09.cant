(to (answer total)
  (let [a b c] (~.first (triplets<- total)))
  (* a b c))

;; Naive approach
(to (triplets<- total)
  (for gather ((c (interval<- (- total 2) (total .quotient 3) -1)))
    (let c^2 (* c c))
    (for yeahs ((b (interval<- c.- (c .quotient 2) -1)))
      (let a^2 (- c^2 (* b b)))
      (let a a^2.sqrt)
      (and (= (+ a b c) total)
           (< a b c)
           [a.floor.exact b c]))))

