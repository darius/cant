;; Binding keys to commands

(to (ctrl rune)                           ;XXX duplicate code
  (- rune.uppercase 64))

(to (meta rune)
  (text<- esc rune))

(let esc (rune<- 27))

(to (key-map<- default-command)
  (let bindings (!map<-))
  (make key-map
    (to (~ .set! key command)
      (bindings .set! key command))
    (to (~ key)
      (if (eof? key)
          'exit
          (bindings .get key default-command)))
    ))

(export
  ctrl meta
  key-map<-)
