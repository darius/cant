Card 6: 31 18 13 56 72 | 74 77 10 23 35 67 36 11")

(let input
  data-file.read-all)
;;  eg1)

(let parse (like "'Card'_ :count ':'_ [:count**_ :hug] _'|'_ [:count**_ :hug]"))
(let inputs (each parse input.split-lines))

(to (part1)
  (for sum-by [((list<- card-id winning-ns ns) inputs)]
    (let matches (winning-ns.range .intersect ns.range))
    (if matches.none? 0 (2 .** matches.count.-1))))
      
(to (part2)
  (let copy-counter (array<-count inputs.count 1))
  (for each! [((~ i (list<- card-id winning-ns numbers)) inputs.items)]
    (let this-card-n-copies (copy-counter i))
    (let n-cards-won (~.count (winning-ns.range .intersect numbers.range)))
    (for each! [(j (i.+1 .thru (min inputs.count.-1 (+ i n-cards-won))))]
      (copy-counter .update j (~ .+ this-card-n-copies))))
  (sum copy-counter.values))
