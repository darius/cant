(let input (~.array (with-input-file ~.read-lines data-file)))

(to (part1)
  (slide 3 1))

(to (slide dx dy)
  (begin sliding ((x 0) (y 0) (ntrees 0))
    (may (input .get y)
      (be #no ntrees)
      (be row
        (sliding (+ x dx)
                 (+ y dy)
                 (+ ntrees (~.count (= #\# (row (x .modulo row.count))))))))))

